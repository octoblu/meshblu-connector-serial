{
  "schemas": {
    "version": "1.0.0",
    "configure": {
      "options": {
        "title": "Default Config",
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "port": {
                "title": "Serial Port",
                "type": "string"
              },
              "baud": {
                "title": "Baud Rate",
                "type": "integer",
                "enum": [
                  115200,
                  57600,
                  38400,
                  19200,
                  9600,
                  4800,
                  2400,
                  1800,
                  1200,
                  600,
                  300,
                  200,
                  150,
                  134,
                  110,
                  75,
                  50
                ],
                "default": 57600
              },
              "delimiter": {
                "title": "Delimiter",
                "type": "string",
                "default": "\\n"
              }
            },
            "required": ["port", "baud", "delimiter"]
          }
        }
      }
    },
    "message": {
      "set-serial-out": {
        "title": "Set Serial Out",
        "type": "object",
        "properties": {
          "serial_out": {
            "title": "Serial Out",
            "type": "string"
          }
        },
        "required": ["serial_out"]
      },
      "get-ports": {
        "title": "Get Ports",
        "type": "object",
        "properties": {
          "actionGetPorts": {
            "title": "Get Ports",
            "type": "boolean",
            "default": true
          }
        },
        "x-form-schema": {
          "angular": "message.get-ports.angular"
        },
        "required": ["actionGetPorts"]
      }
    },
    "form": {
      "message": {
        "get-ports": {
          "angular": [
            { "key": "actionGetPorts" }
          ]
        }
      }
    }
  }
}
